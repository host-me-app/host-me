<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.sweng.hostme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HostMe">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CreationContainer"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WelcomePage"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EnterMailChangePwd"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UserCreation"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UserCreationPage2"
            android:parentActivityName=".UserCreation" />
        <activity
            android:name=".UserCreationPage3"
            android:parentActivityName=".UserCreationPage2" />
        <activity
            android:name=".UserCreationPage4"
            android:parentActivityName=".UserCreationPage3" />
        <activity
            android:name=".UserCreationPage5"
            android:parentActivityName=".UserCreationPage4" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>