{
    "lid": {
        "type": "string",
        "required": true
    },
    "name": {
        "type": "string",
        "required": true
    },
    "room": {
        "type": "string",
        "required": true
    },
    "address": {
        "type": "string",
        "required": true
    },
    "rent": {
        "type": "number",
        "required": true
    },
    "occupants": {
        "type": "number",
        "required": true
    },
    "furnished": {
        "type": "boolean",
        "default": false,
        "required": true
    },
    "bath": {
        "type": "string",
        "values": ["private", "shared"],
        "required": true
    },
    "kitchen": {
        "type": "string",
        "values": ["none", "private", "shared"],
        "required": true
    },
    "laundry": {
        "type": "string",
        "values": ["none", "private", "shared"],
        "required": true
    },
    "pet": {
        "type": "boolean",
        "default": false,
        "required": true
    },
    "images": {
        "type": "array",
        "Content-Type": ["image/jpg", "image/jpeg", "image/png"],
        "required": true
    },
    "available": {
        "type": "boolean",
        "default": true,
        "required": true
    },
    "proprietor": {
        "type": "string",
        "required": true
    },
    "utilities": {
        "type": "number",
        "default": 0,
        "required": true
    },
    "deposit": {
        "type": "number",
        "default": 0,
        "required": true
    },
    "duration": {
        "type":"string",
        "default": "1 month",
        "required": true
    },
    "currentLease": {
        "type": "timestamp",
        "default": null,
        "required": true
    }
}